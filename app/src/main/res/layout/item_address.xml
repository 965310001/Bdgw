<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_content"
    style="@style/width_match_height_warp"
    android:orientation="vertical"
    android:padding="@dimen/largePadding">

    <LinearLayout
        style="@style/width_match_height_warp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextStyle_16"
            android:textColor="@color/black"
            tools:text="张三" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/TextStyle_16"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            tools:text="15949629529" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_address"
        style="@style/TextStyle_14"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/gray"
        tools:text="江西省吉安市万安县xxx村" />

    <View style="@style/HorizontalLine" />

    <RelativeLayout
        style="@style/width_match_height_warp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/iv_defualt"
            style="@style/TextStyle_12"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/selector_checkbox_green"
            android:gravity="center"
            android:text="设为默认"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_del"
            android:background="@drawable/tv_delete_bg"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="编辑"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/tv_delete_bg"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="删除"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_12" />
    </RelativeLayout>

</LinearLayout>


