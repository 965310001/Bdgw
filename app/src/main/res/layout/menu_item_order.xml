<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/width_match_height_warp"
    android:layout_margin="@dimen/dp_6"
    android:background="@color/gray"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_4"
    app:contentPadding="@dimen/dp_5">

    <RelativeLayout
        style="@style/width_match_height_match"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_state"
            style="@style/width_warp_height_warp"
            android:layout_alignParentRight="true"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_12"
            tools:text="状态" />

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/image_height_big"
            android:layout_height="@dimen/image_height_big"
            android:layout_below="@id/tv_state"
            android:gravity="right"
            android:text="111"
            android:textSize="@dimen/text_12"
            tools:background="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/width_match_height_warp"
            android:layout_above="@id/tv_name"
            android:layout_below="@id/tv_state"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_img"
            android:gravity="left"
            android:maxLines="2"
            android:paddingTop="10dp"
            android:textSize="@dimen/text_14"
            android:textStyle="bold"
            tools:text="Mingzi" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/width_match_height_warp"
            android:layout_below="@id/iv_img"
            android:gravity="start"
            android:maxLines="2"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_14"
            tools:text="111111111111111111111111111111111111111111" />

        <View
            style="@style/HorizontalLine"
            android:layout_below="@id/tv_price"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_right_state"
            style="@style/width_warp_height_warp"
            android:layout_below="@id/tv_price"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_left_state"
            android:gravity="right"
            android:text="取消订单"
            android:textSize="@dimen/text_12"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_left_state"
            style="@style/width_warp_height_warp"
            android:layout_below="@id/tv_price"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:textSize="@dimen/text_12"
            android:visibility="invisible"
            tools:text="去支付" />

    </RelativeLayout>
</android.support.v7.widget.CardView>