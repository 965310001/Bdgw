<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".RegisterActivity2">

    <include layout="@layout/item_title_layout" />

    <TextView
        android:id="@+id/layout_shimmer_register"
        style="@style/width_warp_height_warp"
        android:layout_marginTop="100dp"
        android:text="@string/app_name"
        android:textColor="@color/primary_dark"
        android:textSize="@dimen/text_24"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/tab_bar"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/tab_bar"
        android:drawableRight="@drawable/icon_more"
        android:gravity="center_vertical"
        android:hint="省市区"
        android:textSize="@dimen/text_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_shimmer_register" />


    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
        android:id="@+id/ed_address"
        style="@style/width_match_height_warp"
        android:layout_marginLeft="@dimen/tab_bar"
        android:layout_marginRight="@dimen/tab_bar"
        android:hint="详细地址"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_address"
        app:met_baseColor="@color/primary_text"
        app:met_errorColor="@color/red"
        app:met_floatingLabel="normal"
        app:met_floatingLabelText="详细地址"
        app:met_floatingLabelTextColor="@color/primary_text"
        app:met_maxCharacters="11"
        app:met_minCharacters="11"
        app:met_primaryColor="@color/primary"
        app:met_textColorHint="@color/third_text" />

    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
        android:id="@+id/ed_contacts"
        style="@style/width_match_height_warp"
        android:layout_marginLeft="@dimen/tab_bar"
        android:layout_marginTop="@dimen/spacing"
        android:layout_marginRight="@dimen/tab_bar"
        android:layout_weight="1"
        android:hint="联系人"
        android:maxLines="1"
        android:textSize="@dimen/text_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_address"
        app:met_baseColor="@color/primary_text"
        app:met_errorColor="@color/red"
        app:met_floatingLabel="normal"
        app:met_floatingLabelText="联系人"
        app:met_floatingLabelTextColor="@color/primary_text"
        app:met_minCharacters="2"
        app:met_primaryColor="@color/primary"
        app:met_textColorHint="@color/third_text" />


    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
        android:id="@+id/ed_company"
        style="@style/width_match_height_warp"
        android:layout_marginLeft="@dimen/tab_bar"
        android:layout_marginTop="@dimen/spacing"
        android:layout_marginRight="@dimen/tab_bar"
        android:hint="店铺名称"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="@dimen/text_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_contacts"
        app:met_baseColor="@color/primary_text"
        app:met_errorColor="@color/red"
        app:met_floatingLabel="normal"
        app:met_floatingLabelText="店铺名称"
        app:met_floatingLabelTextColor="@color/primary_text"
        app:met_maxCharacters="15"
        app:met_minCharacters="6"
        app:met_primaryColor="@color/primary"
        app:met_textColorHint="@color/third_text" />

    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
        android:id="@+id/ed_ywyno"
        style="@style/width_match_height_warp"
        android:layout_marginLeft="@dimen/tab_bar"
        android:layout_marginTop="@dimen/spacing"
        android:layout_marginRight="@dimen/tab_bar"
        android:hint="业务员ID"
        android:maxLines="1"
        android:textSize="@dimen/text_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_company"
        app:met_baseColor="@color/primary_text"
        app:met_errorColor="@color/red"
        app:met_floatingLabel="normal"
        app:met_floatingLabelText="业务员ID"
        app:met_floatingLabelTextColor="@color/primary_text"
        app:met_primaryColor="@color/primary"
        app:met_textColorHint="@color/third_text" />

    <TextView
        android:id="@+id/btn_register"
        style="@style/width_match_height_warp"
        android:layout_marginLeft="@dimen/tab_bar"
        android:layout_marginTop="@dimen/spacing_bigger"
        android:layout_marginRight="@dimen/tab_bar"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:paddingTop="@dimen/spacing_bigger"
        android:paddingBottom="@dimen/spacing_bigger"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_ywyno" />

    <TextView
        android:id="@+id/tv_to_login"
        style="@style/width_warp_height_warp"
        android:layout_marginRight="@dimen/tab_bar"
        android:paddingTop="@dimen/spacing_bigger"
        android:text="已有账号！去登录"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_register" />

</android.support.constraint.ConstraintLayout>
