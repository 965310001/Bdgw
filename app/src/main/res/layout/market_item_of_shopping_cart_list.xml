<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/width_match_height_warp"
    android:background="@color/white"
    android:orientation="vertical">

    <!--购物车-->
    <LinearLayout
        style="@style/width_match_height_warp"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_10"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_check_vendor"
                android:layout_width="@dimen/image_height_litter"
                android:layout_height="@dimen/image_height_litter"
                android:background="@drawable/market_shopping_cart_selector" />

            <TextView
                android:id="@+id/tv_vendor_name"
                style="@style/width_warp_height_warp"
                android:layout_marginStart="@dimen/dp_12"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/HorizontalLine" />

    <LinearLayout
        android:id="@+id/goods_list"
        style="@style/width_match_height_warp"
        android:orientation="vertical" />

    <View style="@style/HorizontalLine" />

</LinearLayout>
