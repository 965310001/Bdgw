<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.heima.tabview.library.TabView
        android:id="@+id/tabView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:imageViewTextViewMargin="2dip"
        app:tab_imageViewHeight="30dp"
        app:tab_imageViewWidth="30dp"
        app:tab_tabViewBackgroundColor="@color/white"
        app:tab_tabViewDefaultPosition="0"
        app:tab_tabViewGravity="bottom"
        app:tab_tabViewHeight="52dp"
        app:tab_textViewSelColor="@color/orange"
        app:tab_textViewSize="14sp"
        app:tab_textViewUnSelColor="@color/dark" />

</LinearLayout>